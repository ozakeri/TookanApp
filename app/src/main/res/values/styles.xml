<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/them</item>
        <item name="colorPrimaryDark">@color/bg_screen3</item>
        <item name="colorAccent">@color/bg_screen3</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/bg_screen3</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/item_text_color</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:paddingTop">@dimen/list_padding</item>
        <item name="android:paddingLeft">@dimen/list_padding</item>
        <item name="android:paddingRight">@dimen/list_padding</item>
        <item name="android:paddingBottom">@dimen/list_padding</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">@null</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">@null</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="MyRadioButtonDriver" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/material_deep_teal_500</item>
        <item name="colorControlActivated">@color/them</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

</resources>
